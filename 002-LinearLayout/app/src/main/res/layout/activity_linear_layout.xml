            android:layout_margin="5dp"/>

        <TextView
            android:text="Four,Four"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"/>
    </LinearLayout>

</RelativeLayout>
